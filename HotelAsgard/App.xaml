<Application x:Class="HotelAsgard.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:HotelAsgard.Utils"
             StartupUri="./Views/UserViews/LoginView.xaml">
    <Application.Resources>
            <Style TargetType="Window">
                <Setter Property="WindowStartupLocation" Value="CenterOwner"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>
    
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Recurso Global: Convertidor de URL de Imagen -->
        <utils:ImageUrlConverter x:Key="ImageUrlConverter"/>
    </Application.Resources>
</Application>
