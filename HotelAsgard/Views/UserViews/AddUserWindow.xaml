<Window x:Class="HotelAsgard.Views.UserViews.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelAsgard.Views.UserViews"
        mc:Ignorable="d"
        Title="AddUserWindow" Height="720" Width="1280">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"  
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DodgerBlue"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#b0daf1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>


    <Grid>

        <Image Source="..\..\Images\paisaje_cutre.png" Stretch="Fill"></Image>
        
        <Grid Background="#bcbcbc" Margin="100,50" Opacity="0.9">


            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Text="Añadir Usuario" Foreground="WhiteSmoke" FontFamily="Mongolian Baiti" FontSize="40" HorizontalAlignment="Left"></TextBlock>

            <StackPanel Grid.Column="0" Grid.Row="1">
                <TextBlock Margin="10" FontSize="30" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Nombre</TextBlock>
                <TextBox Margin="10,0,20,0" FontSize="25"></TextBox>
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="1">
                <TextBlock Margin="10" FontSize="30" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Apellido</TextBlock>
                <TextBox Margin="10,0,20,0" FontSize="25"></TextBox>
            </StackPanel>

            <StackPanel Grid.Column="2" Grid.Row="1">
                <TextBlock Margin="10" FontSize="30" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Rol</TextBlock>
                <ComboBox Margin="10,0,20,0" FontSize="25">
                    <ComboBoxItem FontFamily="Mongolian Baiti"></ComboBoxItem>
                    <ComboBoxItem FontFamily="Mongolian Baiti">Administrador</ComboBoxItem>
                    <ComboBoxItem FontFamily="Mongolian Baiti">Empleado</ComboBoxItem>
                    <ComboBoxItem FontFamily="Mongolian Baiti">Cliente</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Column="0" Grid.Row="2">
                <TextBlock Margin="10" FontSize="30" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Email</TextBlock>
                <TextBox Margin="10,0,20,0" FontSize="25"></TextBox>
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="2">
                <TextBlock Margin="10" FontSize="30" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Dni</TextBlock>
                <TextBox Margin="10,0,20,0" FontSize="25"></TextBox>
            </StackPanel>

            <StackPanel Grid.Column="2" Grid.Row="2">
                <TextBlock Margin="10" FontSize="30" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Dni</TextBlock>
                <DatePicker FontFamily="Mognolian Baiti" FontSize="24"></DatePicker>
            </StackPanel>
            
            <StackPanel Grid.Column="0" Grid.Row="3">
                <TextBlock Margin="10" FontSize="30" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Ciudad</TextBlock>
                <ComboBox Margin="10,0,20,0" FontSize="25">
                    <ComboBoxItem FontFamily="Mongolian Baiti"></ComboBoxItem>
                    <ComboBoxItem FontFamily="Mongolian Baiti">Alicante</ComboBoxItem>
                    <ComboBoxItem FontFamily="Mongolian Baiti">Madrid</ComboBoxItem>
                    <ComboBoxItem FontFamily="Mongolian Baiti">Valencia</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="3">
                <TextBlock Margin="10" FontSize="30" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Dni</TextBlock>
                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                    <RadioButton Margin="10,0,0,0" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" FontSize="25" HorizontalAlignment="Left">H</RadioButton>
                    <RadioButton Margin="10,0,0,0" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" FontSize="25" HorizontalAlignment="Left">M</RadioButton>
                </StackPanel>
            </StackPanel>







            <StackPanel Grid.Row="2" Orientation="Horizontal">
                

                
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal">
                

                <StackPanel Margin="0,0,30,0">
                    
                </StackPanel>

                
            </StackPanel>

            <TextBlock Grid.Row="4" Margin="10,0,100,5" FontSize="15" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Miembro VIP</TextBlock>

            <Button Grid.Row="5" Grid.Column="3" Height="50" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Enviar" FontSize="30"></Button>
        </Grid>
    </Grid>
</Window>
