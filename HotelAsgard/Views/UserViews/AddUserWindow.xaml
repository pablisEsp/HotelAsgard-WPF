<Window x:Class="HotelAsgard.Views.UserViews.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelAsgard.Views.UserViews"
        mc:Ignorable="d" 
        Title="AddUserWindow" Height="720" Width="1280">
    <!-- prueba-->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"  
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DodgerBlue"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#b0daf1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid Background="#bcbcbc" Margin="100,50" >


            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Añadir Usuario" Foreground="WhiteSmoke" FontFamily="Mongolian Baiti" FontSize="40" HorizontalAlignment="Left"></TextBlock>

            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <StackPanel Margin="0,0,30,0">
                    <TextBlock Margin="10,0,100,5" FontSize="15" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Nombre</TextBlock>
                    <TextBox Margin="10,0,20,0"></TextBox>
                </StackPanel>

                <StackPanel Margin="0,0,30,0">
                    <TextBlock Margin="10,0,100,5" FontSize="15" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Apellido</TextBlock>
                    <TextBox Margin="10,0,20,0"></TextBox>
                </StackPanel>

                <StackPanel>
                    <TextBlock Margin="10,0,100,5" FontSize="15" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Rol</TextBlock>
                    <ComboBox Margin="10,0,20,0">
                        <ComboBoxItem FontFamily="Mongolian Baiti"></ComboBoxItem>
                        <ComboBoxItem FontFamily="Mongolian Baiti">Administrador</ComboBoxItem>
                        <ComboBoxItem FontFamily="Mongolian Baiti">Empleado</ComboBoxItem>
                        <ComboBoxItem FontFamily="Mongolian Baiti">Cliente</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <StackPanel Margin="0,0,30,0">
                    <TextBlock Margin="10,0,114,5" FontSize="15" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Email</TextBlock>
                    <TextBox Margin="10,0,20,0"></TextBox>
                </StackPanel>

                <StackPanel Margin="0,0,30,0">
                    <TextBlock Margin="10,0,130,5" FontSize="15" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Dni</TextBlock>
                    <TextBox Margin="10,0,20,0"></TextBox>
                </StackPanel>

                <StackPanel>
                    <TextBlock Margin="10,0,100,5" FontSize="15" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Rol</TextBlock>
                    <DatePicker Margin="10,0,0,0" Height="30"></DatePicker>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <StackPanel Margin="0,0,30,0">
                    <TextBlock Margin="10,0,108,5" FontSize="15" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Ciudad</TextBlock>
                    <TextBox Margin="10,0,20,0"></TextBox>
                </StackPanel>

                <StackPanel Margin="0,0,30,0">
                    <TextBlock Margin="10,0,120,5" FontSize="15" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Sexo</TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                        <RadioButton Margin="10,0,0,0" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" FontSize="15" HorizontalAlignment="Left">H</RadioButton>
                        <RadioButton Margin="10,0,0,0" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" FontSize="15" HorizontalAlignment="Left">M</RadioButton>
                    </StackPanel>
                </StackPanel>

                <StackPanel>
                    <TextBlock Margin="10,0,100,5" FontSize="15" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Miembro VIP</TextBlock>
                    <Button Content="Buscar" Height="25" Width="75" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="WhiteSmoke"></Button>
                </StackPanel>
            </StackPanel>

            <TextBlock Grid.Row="4" Margin="10,0,100,5" FontSize="15" FontFamily="Mongolian Baiti" Foreground="WhiteSmoke" VerticalAlignment="Top">Miembro VIP</TextBlock>

            <Button Grid.Row="5" Height="35" Width="100" HorizontalAlignment="Right" Margin="0,0,20,0" Content="Enviar"></Button>
        </Grid>
    </Grid>
</Window>
