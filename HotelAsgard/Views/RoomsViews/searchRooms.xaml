<Window x:Class="HotelAsgard.Views.RoomsViews.searchRooms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelAsgard.Views.RoomsViews"
        mc:Ignorable="d"
        Title="Buscar Habitaciones" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="0.40*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.35*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <StackPanel Margin="15,0,0,0" Grid.Row="0" HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Top">
            <Image Source="../../Images/logo_con_fondo.png" Width="100" Height="150"></Image>
            <TextBlock Margin="10,0,0,0" FontSize="28" VerticalAlignment="Center">Hotel Asgard</TextBlock>
        </StackPanel>


        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button  Width="100" FontSize="20" Background="Transparent" BorderBrush="Transparent">Home</Button>
            <Button Margin="20,0,20,0" Width="100" FontSize="20" Background="Transparent" BorderBrush="Transparent">Usuarios</Button>
            <Button Margin="20,0,20,0" Width="100" FontSize="20" Background="Transparent" BorderBrush="Transparent">Reservas</Button>
            <Button Margin="20,0,20,0" Width="120" FontSize="20" Background="Transparent" BorderBrush="Transparent">Habitaciones</Button>
        </StackPanel>


        <StackPanel Margin="40,0,0,0" Grid.Row="1" VerticalAlignment="Bottom">
            <TextBlock Foreground="#B0DAF1" FontSize="48" FontWeight="Bold">Buscador</TextBlock>
        </StackPanel>

        <StackPanel Margin="10,0,0,0" Orientation="Horizontal" Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom">
            <TextBlock  FontSize="40" FontWeight="Bold">Habitaciones</TextBlock>
        </StackPanel>

        <!-- Buscador -->
        <Grid Margin="40,10,10,10" Grid.Row="2" Grid.RowSpan="2" Background="#F4F4F4">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="10">
                <TextBlock Margin="0,0,0,5">Código de la habitación</TextBlock>
                <TextBox x:Name="room_Code"></TextBox>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="10">
                <TextBlock Margin="0,0,0,5">Nombre de la habitación</TextBlock>
                <TextBox x:Name="room_Name"></TextBox>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="10,5,10,0">
                <TextBlock Margin="0,0,0,5">Número de huéspedes</TextBlock>
                <ComboBox x:Name="guests_Number" SelectedIndex="0">
                    <ComboBoxItem>1</ComboBoxItem>
                    <ComboBoxItem>2</ComboBoxItem>
                    <ComboBoxItem>3</ComboBoxItem>
                    <ComboBoxItem>4</ComboBoxItem>
                    <ComboBoxItem>5</ComboBoxItem>
                    <ComboBoxItem>6</ComboBoxItem>
                </ComboBox>
            </StackPanel>


            <StackPanel Grid.Row="3" Margin="10,5,10,0" >
                <TextBlock Margin="0,0,0,5">Precio por noche</TextBlock>
                <TextBox x:Name="price"></TextBox>
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="10,5,10,0" >
                <CheckBox Content="Oferta"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="10,5,10,0">
                <TextBlock  Margin="0,0,0,5" >Opciones adicionales</TextBlock>
                <StackPanel  Orientation="Horizontal">
                    <CheckBox Content="Cuna"/>
                    <CheckBox Content="Cama extra" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="6" Margin="10,5,10,0" >
                <TextBlock>Reservada / Ocupada</TextBlock>
                <StackPanel  Orientation="Horizontal">
                    <RadioButton Margin="5">Sí</RadioButton>
                    <RadioButton Margin="5">No</RadioButton>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="7" Margin="10,5,10,0" >
                <TextBlock Margin="0,0,0,5">Fecha de reserva / ocupación</TextBlock>
                <ComboBox SelectedIndex="0">
                    <DatePicker/>
                </ComboBox>
            </StackPanel>

            <Button Grid.Row="8" Height="30" Width="150" Content="Buscar">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                    BorderBrush="#B0DAF1"
                    BorderThickness="2"
                    Background="#B0DAF1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        
                 
        
        <!-- RESULTADOS HABITACIONES -->
        <DataGrid Grid.Row="2" Grid.Column="1"
                  ItemsSource="{Binding Habitaciones}" 
                  AutoGenerateColumns="False" 
                  Margin="10" 
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="0.60*" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" />
                <DataGridTextColumn Header="Huéspedes" Binding="{Binding NumHuespedes}" Width="0.60*" />
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding Descripcion}" />
                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Precio" Binding="{Binding Precio}" Width="*" />
                <DataGridCheckBoxColumn Header="Oferta" Binding="{Binding Oferta}" Width="*" />
                <DataGridCheckBoxColumn Header="Cuna" Binding="{Binding Cuna}" Width="*" />
                <DataGridCheckBoxColumn Header="Cama Extra" Binding="{Binding CamaExtra}" Width="*" />
                <DataGridCheckBoxColumn Header="Ocupada" Binding="{Binding Ocupada}" Width="*" />
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*" />

                <!-- Columna de iconos -->
                <DataGridTemplateColumn Header="Acciones" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Botón Editar -->
                                <Button Content="✏️" ToolTip="Editar" Command="{Binding DataContext.EditarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}" Margin="2" Background="Transparent" Click="editRoom_Click"/>
                                <!-- Botón Eliminar -->
                                <Button Content="❌" ToolTip="Eliminar" Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}" Margin="2" Background="Transparent" Click="deleteRoom_Click"/>
                                <!-- Botón Más Información -->
                                <Button Content="ℹ️" ToolTip="Más Información" Command="{Binding DataContext.MasInfoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}" Margin="2" Background="Transparent" Click="roomInfo_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            
        </DataGrid>
        
        <!-- Botón añadir habitación -->
        <Button Margin="0,0,10,0" HorizontalAlignment="Right" BorderBrush="Transparent" Grid.Column="2" Grid.Row="3" Background="Transparent">
            <StackPanel>
                <Image Width="40" Source="../../Images/add_users.png"></Image>
            </StackPanel>
        </Button>


    </Grid>
</Window>
