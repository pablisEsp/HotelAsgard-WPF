<Window x:Class="HotelAsgard.Views.RoomsViews.addRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelAsgard.Views.RoomsViews"
        mc:Ignorable="d"
        Title="Añadir Habitación" Height="720" Width="1280">
    <Grid Margin="20">
        
        <!--Grid definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition  Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.25*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!-- Title -->
        <TextBlock x:Name="title" VerticalAlignment="Center" FontSize="50" FontWeight="Bold" Foreground="#B0DAF1"></TextBlock>
        
        <!-- Name -->
        <StackPanel Margin="10" Grid.Row="1">
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">Nombre</TextBlock>
            <TextBox x:Name="roomName" />
        </StackPanel>
        
        <StackPanel Margin="20,10,10,10" Grid.Column="1" Grid.Row="1">
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">Categoría</TextBlock>
            <ComboBox x:Name="roomCategory" SelectionChanged="RoomCategory_OnSelectionChanged">
                <ComboBoxItem>Suite</ComboBoxItem>
                <ComboBoxItem>Suite Junior</ComboBoxItem>
                <ComboBoxItem>Premium</ComboBoxItem>
                <ComboBoxItem>Standard Double</ComboBoxItem>
                <ComboBoxItem>Standard Twin</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Max guests -->
        <StackPanel Margin="10" Grid.Row="1" Grid.Column="2">
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">Capacidad de huéspedes</TextBlock>
            <TextBox x:Name="maxGuests"/>
        </StackPanel>
        
        <!-- Description -->
        <StackPanel Margin="10" Grid.Row="2" Grid.ColumnSpan="3">
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">Descripción</TextBlock>
            <RichTextBox
                x:Name="DescriptionRichTextBox"
                Height="125" VerticalScrollBarVisibility="Auto">
                <FlowDocument>
                    <Paragraph x:Name="descriptionText" LineHeight="5"/>
                </FlowDocument>
            </RichTextBox>
        </StackPanel>
        
        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="3">
            <!-- Image Selector -->
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">Seleccionar imagen principal</TextBlock>
            <StackPanel HorizontalAlignment="Left">
                <Button x:Name="UploadImageButton" Content="Seleccionar archivo" Width="400" Height="40" Click="UploadImageButton_Click"/>
                <!-- <Image x:Name="PreviewImage" Width="200" Height="200" Margin="10" Stretch="Uniform"/> -->
            </StackPanel>
            
            <!-- Disccount -->
            <!--
            <TextBlock Margin="0,30,0,5" FontSize="20" Foreground="#3C3C3C">Oferta</TextBlock>
            <StackPanel Orientation="Horizontal">
                <RadioButton VerticalContentAlignment="Center" FontSize="18" Margin="0,0,15,0">Sí</RadioButton>
                <RadioButton VerticalContentAlignment="Center" FontSize="18">No</RadioButton>
            </StackPanel>
            -->
        </StackPanel>
        
        
        
        <!-- Extra settings
        <StackPanel Margin="10" Grid.Column="1" Grid.Row="3">
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">Opciones adicionales</TextBlock>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <CheckBox x:Name="cradleCheck" FontSize="18" VerticalContentAlignment="Center">Cuna</CheckBox>
                <CheckBox x:Name="extraBedCheck" Margin="20,0,0,0" FontSize="18" VerticalContentAlignment="Center">Cama extra</CheckBox>
            </StackPanel>
        </StackPanel>
        -->

        <!-- Price -->
        <StackPanel Margin="10" Grid.Row="3" Grid.Column="2">
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">Precio</TextBlock>
            <TextBox x:Name="roomPrice" IsReadOnly="True"></TextBox>
        </StackPanel>
        
        <!-- Enviar -->
        <Button x:Name="sendButton" Grid.Column="2" Grid.Row="4" Width="200" Height="40"/>
    </Grid>
</Window>
