<Window x:Class="HotelAsgard.Views.RoomsViews.addRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelAsgard.Views.RoomsViews"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Añadir Habitación" Height="720" Width="1280"
        WindowState="Maximized"
        ResizeMode="CanMinimize">
    <Grid Margin="20">

        <!--Grid definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="0.75*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="0.4*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.25*" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock x:Name="title" VerticalAlignment="Center" FontSize="50" FontWeight="Bold" Foreground="#B0DAF1"></TextBlock>

        <!-- Botton back -->
        <Button Content="Volver" Click="GoBackButton" HorizontalAlignment="Right" Grid.Column="2"/>
        
        <!-- Name & Code -->
        <Grid Margin="10" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock FontSize="20" Foreground="#3C3C3C">Nombre</TextBlock>
                <TextBox x:Name="roomName" />
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock FontSize="20" Foreground="#3C3C3C">Código</TextBlock>
                <TextBox x:Name="roomCode" IsReadOnly="True"/>
            </StackPanel>
        </Grid>


        <StackPanel Margin="20,10,10,10" Grid.Column="1" Grid.Row="1">
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">Categoría</TextBlock>
            <ComboBox x:Name="roomCategory" SelectionChanged="roomCategory_SelectionChanged"
                      ItemsSource="{Binding Categorias}"
                      SelectedItem="{Binding CategoriaSeleccionada, Mode=TwoWay}" DisplayMemberPath="Nombre">
            </ComboBox>
        </StackPanel>

        <!-- Max guests -->
        <StackPanel Margin="10" Grid.Row="1" Grid.Column="2">
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">Capacidad de huéspedes</TextBlock>
            <TextBox x:Name="maxGuests" IsReadOnly="True" Text="{Binding NumPersonas, Mode=OneWay}" />
        </StackPanel>

        <!-- Description -->
        <StackPanel Margin="10" Grid.Row="2" Grid.ColumnSpan="3">
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">Descripción</TextBlock>
            <RichTextBox
                x:Name="DescriptionRichTextBox"
                Height="64" VerticalScrollBarVisibility="Auto">
                <FlowDocument>
                    <Paragraph x:Name="descriptionText" LineHeight="5" />
                </FlowDocument>
            </RichTextBox>
        </StackPanel>

        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="3" Grid.RowSpan="2">
            <!-- Imagen Principal -->
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">
                Imagen Principal
            </TextBlock>
            <Image x:Name="PreviewImage" Width="75" Height="75" Margin="10" Stretch="Uniform" />

            <!-- Lista de imágenes secundarias -->
            <TextBlock Margin="0,10,0,5" FontSize="16" Foreground="#3C3C3C">
                Imágenes secundarias
            </TextBlock>
            <ListBox x:Name="ImageListBox" Width="400" Height="150"> <!-- Permitimos la previsualizacion de las imagenes dentrro del ListBox -->
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding}" Width="50" Height="50" Margin="5" Stretch="Uniform" />
                            <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="10,0,0,0" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Eliminar Seleccionada" Width="133" Click="DeleteSelectedImage_Click" />
                <Button Content="Hacer Principal" Width="133" Margin="10,0,0,0" Click="SetAsMainImage_Click" />
                <Button Content="Eliminar Todas" Width="133" Margin="10,0,0,0" Click="DeleteAllImages_Click" />
            </StackPanel>

            <Button x:Name="UploadImageButton" Content="Seleccionar archivo" Margin="0,5,0,0" Width="400" Height="30"
                    Click="UploadImageButton_Click" />
        </StackPanel>


        <!-- Extra settings
        <StackPanel Margin="10" Grid.Column="1" Grid.Row="3">
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">Opciones adicionales</TextBlock>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <CheckBox x:Name="cradleCheck" FontSize="18" VerticalContentAlignment="Center">Cuna</CheckBox>
                <CheckBox x:Name="extraBedCheck" Margin="20,0,0,0" FontSize="18" VerticalContentAlignment="Center">Cama extra</CheckBox>
            </StackPanel>
        </StackPanel>
        -->

        <!-- Price -->
        <StackPanel Margin="10" Grid.Row="3" Grid.Column="2">
            <TextBlock Margin="0,0,0,5" FontSize="20" Foreground="#3C3C3C">Precio</TextBlock>
            <TextBox x:Name="roomPrice" Text="{Binding Precio, Mode=OneWay}" IsReadOnly="True"></TextBox>
        </StackPanel>

        <!-- Enviar -->
        <Button x:Name="sendButton" Grid.Column="2" Grid.Row="4" Width="200" Height="40" Click="SendButton_OnClick" />
    </Grid>
</Window>